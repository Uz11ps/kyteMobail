# The next line is used by Flutter to locate generated config file.
load File.expand_path(File.join('..', 'Flutter', 'generated_podhelper.rb'), __FILE__)

platform :ios, '13.0'

target 'Runner' do
  use_frameworks! :linkage => :static
  use_modular_headers!

  flutter_install_all_ios_pods File.expand_path(File.join('..', 'Flutter'), __FILE__)

  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    
    target.build_configurations.each do |config|
      # Force deployment target to 13.0 for ALL pod targets and configurations
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.0'
      # Fix Bitcode issues
      config.build_settings['ENABLE_BITCODE'] = 'NO'
    end
  end
end

